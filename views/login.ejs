<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') %>
  </head>
  <body>
    <header class="header-main"><%- include('partials/header.ejs') %></header>
    <body>
      <form action="/login" method="post">
        <h2>Login ejs</h2>
        <div class="input-field">
          <input
            type="text"
            name="username"
            id="username"
            placeholder="Enter Username"
          />
        </div>
        <div class="input-field">
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter Password"
          />
        </div>
        <button>LogIn</button>
      </form>
      <section>
        <a href="/signup">If you are new, sign up with us!</a>
      </section>
    </body>

    <footer></footer>
  </body>
</html>
